@{
    ViewData["Title"] = "Edit a Task";
}

@model List<Tasklist>

<br /><br />
<table class="table table-bordered table-light">
    <thead style="text-align: center; font-weight: bold">
        <tr>
            <td>Category</td>
            <td>Task</td>
            <td>Quadrant</td>
            <td>Due Date</td>
            <td>Completion Status</td>
            <td></td>
        </tr>
    </thead>

    @foreach (var x in Model)
    {
        <tbody>
            <tr>
                <td>@(x.Category?.CategoryName ?? "No Category")</td>
                <td>@x.TaskName</td>
                <td>@x.Quadrant</td>
                <td>@x.DueDate</td>
                <td>@x.Completion</td>

                <td style="text-align: center"><a class="btn btn-outline-dark" asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a></td>
            </tr>
        </tbody>
    }
</table>